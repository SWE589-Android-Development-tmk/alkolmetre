<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/category"
        android:textStyle="bold" />

    <Button
        android:id="@+id/beer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/beer"
        android:visibility="visible" />

    <Button
        android:id="@+id/wine_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wine"
        android:visibility="visible" />

    <Button
        android:id="@+id/sprits_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sprits"
        android:visibility="visible" />

    <Button
        android:id="@+id/search_in_details_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_in_detail"
        android:visibility="visible" />

</LinearLayout>